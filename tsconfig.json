{
    "compilerOptions": {
        "outDir": "lib",
        "allowJs": true,
        "target": "es2015",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "baseUrl": "types",
        "typeRoots": ["types"],
        "sourceMap": true
    },
    "exclude": [
        "/node_modules",
        "/build",
        "/test/*.ts"
    ]
}
