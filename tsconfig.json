{
    "compilerOptions": {
        "outDir": "lib",
        "allowJs": true,
        "target": "es6",
        "module": "commonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "baseUrl": "types",
        "typeRoots": ["types"],
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "exclude": [
        "/node_modules",
        "/build",
        "/test/*.ts"
    ]
}
